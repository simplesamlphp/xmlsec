{
    "name": "simplesamlphp/xmlsec",
    "description": "A PHP library for XML Security",
    "license": "BSD-3-Clause",
    "keywords": [
        "xml",
        "xmldsig",
        "signature",
        "security"
    ],
    "homepage": "https://github.com/simplesamlphp/xmlsec",
    "authors": [
        {
            "name": "Rob Richards",
            "email": "rrichards@cdatazone.org",
            "homepage": "https://www.cdatazone.org/",
            "role": "Developer"
        },
        {
            "name": "Jaime Perez Crespo",
            "email": "jaime.perez@uninett.no",
            "role": "Maintainer"
        }
    ],
    "autoload": {
        "psr-4": {
            "SimpleSAML\\XMLSec\\": "src"
        }
    },
    "require": {
        "php": ">= 7.4 || ^8.0",
        "ext-openssl": "*",
        "ext-dom": "*",

        "simplesamlphp/assert": "~0.0.13",
        "simplesamlphp/xml-common": "~0.0.9"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.5",
        "simplesamlphp/simplesamlphp-test-framework": "~0.2.7",
        "sensiolabs/security-checker": "~6.0",
        "squizlabs/php_codesniffer": "~3.5",
        "vimeo/psalm": "~3.14"
    }
}
